<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexa.arduinoeverywhere.MainActivity">

    <EditText
        android:id="@+id/EditTextAEnvoyer"
        android:layout_width="375dp"
        android:layout_height="56dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        android:singleLine="false"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="375dp"
        android:layout_height="49dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditTextAEnvoyer">

        <Button
            android:id="@+id/ButtonBegin"
            android:layout_width="84dp"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:onClick="onClickBegin"
            android:text="Begin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/ButtonSend"
            android:layout_width="84dp"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:onClick="onClickToSend"
            android:text="Send"
            app:layout_constraintStart_toEndOf="@+id/ButtonBegin"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/ButtonStop"
            android:layout_width="84dp"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:onClick="onClickToStop"
            android:text="Stop"
            app:layout_constraintStart_toEndOf="@+id/ButtonSend"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/ButtonClear"
            android:layout_width="84dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:onClick="onClickCToClear"
            android:text="Clear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ButtonStop"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/TextRecu"
        android:layout_width="355dp"
        android:layout_height="238dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:text="Texte venant de l'arduino"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.333" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="368dp"
        android:layout_height="129dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/butConnect"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickBeginTCP"
            android:text="Connect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/butSend"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickSend"
            android:text="Send"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/butConnect" />

        <Button
            android:id="@+id/butStop"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:onClick="onClickStop"
            android:text="STOP"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/butSend" />

        <EditText
            android:id="@+id/editIP"
            android:layout_width="167dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="4dp"
            android:ems="10"
            android:inputType="text"
            android:text="192.168.1.20"
            app:layout_constraintEnd_toStartOf="@+id/editPort"
            app:layout_constraintStart_toEndOf="@+id/butConnect"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editPort"
            android:layout_width="103dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="number"
            android:text="13000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/TCPTextAEnvoyer"
            android:layout_width="268dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:inputType="text"
            android:text="bla bla a essayer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/butSend"
            app:layout_constraintTop_toBottomOf="@+id/editIP"
            tools:ignore="DuplicateIds" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>

