<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="parametre Serveur">

        <EditTextPreference
            android:autoText="false"
            android:defaultValue="192.168.1.20"
            android:inputType="text"
            android:key="pref_AdressIP"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Adresse IP" />
        <EditTextPreference
            android:defaultValue="13000"
            android:inputType="numberDecimal"
            android:key="pref_Port"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Port" />
        <EditTextPreference
            android:inputType="textPassword"
            android:key="pref_Password"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Mot de passe" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_MultiCon"
            android:title="Multi-connection autorisée" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Paramètres USB">

    </PreferenceCategory>
    <ListPreference
        android:defaultValue="1"
        android:entries="@array/USBspeed"
        android:entryValues="@array/USBspeed"
        android:key="USBspeed"
        android:title="USB Bauds" />
</PreferenceScreen>